<root>
  <styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    <include src="s2r://panorama/styles/custom_game/resources.css" />
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/resources.js" />     
  </scripts>
  <Panel class="ResourceRoot" hittest="false">
    <Panel id='ResourcePanel'>
	  <Label id="ResourcesLabel" text="RESOURCES" html="true" class="TitleFont" />
	  <Panel id='LumberIconPanel'>
        <Image id="LumberIcon" src="file://{images}/custom_game/lumber_icon.png" onmouseover="UIShowTextTooltip(Lumber)"  onmouseout="UIHideTextTooltip()"/>
      </Panel>
      <Panel id='LumberLabelPanel' onmouseover="UIShowTextTooltip(Lumber is earned from making buildings that can train units.)"  onmouseout="UIHideTextTooltip()">
        <Label id="LumberText" text="0" class="TitleFont" />
      </Panel>
	  <Panel id='GoldIconPanel'>
        <Image id="GoldIcon" src="file://{images}/custom_game/gold_icon.png" onmouseover="UIShowTextTooltip(Gold)"  onmouseout="UIHideTextTooltip()" />
      </Panel>
      <Panel id='GoldLabelPanel'  onmouseout="UIHideTextTooltip()">
        <Label id="GoldText" text="0" html="true" class="TitleFont" />
      </Panel>
	   <Panel id='CheeseIconPanel'>
        <Image id="CheeseIcon" src="file://{images}/custom_game/cheese_icon.tga" onmouseover="UIShowTextTooltip(Cheese)"  onmouseout="UIHideTextTooltip()" />
      </Panel>
      <Panel id='CheeseLabelPanel' onmouseover="UIShowTextTooltip(Cheese is used to build legendary buildings.)"  onmouseout="UIHideTextTooltip()">
        <Label id="CheeseText" text="0" html="true" class="TitleFont" />
      </Panel>
    </Panel>
  </Panel>
</root>
